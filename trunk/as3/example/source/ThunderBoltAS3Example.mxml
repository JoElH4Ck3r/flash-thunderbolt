<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml">

	<mx:Script>
        <![CDATA[
        	import org.osflash.thunderbolt.Logger;
            
            private function traceToFirebug(event:Event):void  
            {
				//
				// Optionally you can hide the time stamp
				// Logger.includeTime = false;

				var myNumber: int = 5;
				var myString: String = "Lorem ipsum";
				var myObject: Object = {exampleArray: ["firstValue", "secondValue"], y: 10, exampleString: "Hello", nestedObject: {x: 100, y: 200}};
				var myArray: Array = ["firstValue",{x: 100, y: 200}, "secondValue"];
				
				var label: String = event.target.label;
				
				switch (label)
				{
					case "info":
						Logger.info ("A simple string", myString);
					break;
					case "warn":
						Logger.warn ("Two log objects: A number typed as int and a string", myNumber, myString);
					break;
					case "error":
						Logger.error ("An array with a nested object: ", myArray);
					break;
					case "debug":
						Logger.debug ("An object with a nested object and nested array", myObject);
					break;
					default:

				}
            }           
            
            private function getFireBug( ):void
            {
             	var url:URLRequest = new URLRequest( "http://www.getfirebug.com/" );
                navigateToURL( url );
            }
		
      ]]>
    </mx:Script>
	<mx:Style source="css/logger.css"/>
    <mx:Text id="headline" 
    	htmlText="Using ThunderBolt AS3" 
    	paddingBottom="15" />
    <mx:HBox horizontalGap="10">
		 <mx:Button id="infoButton" 
		 		label="info" click="traceToFirebug(event);" 
		 		width="100" height="50"/> 
		 <mx:Button id="warnButton" 
		 		label="warn" click="traceToFirebug(event);" 
		 		width="100" height="50"/> 
		 <mx:Button id="errorButton" 
	 			label="error" 
				click="traceToFirebug(event);" 
				width="100" height="50"/>   	
		 <mx:Button id="logButton" 
		 		label="debug" 
				click="traceToFirebug(event);" 
				width="100" height="50"/>
    </mx:HBox>	  
	<mx:Text id="openFirebug"
		htmlText="Press F12 to open Firebug" 
		paddingTop="15" paddingBottom="5"/>
	<mx:LinkButton id="getFirebug"
		label="(Get Firebug!)" click="getFireBug();" />
</mx:Application>