<?xml version="1.0" encoding="utf-8"?>
<s:VGroup 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/halo" 
	xmlns:view="org.osflash.thunderbolt.console.view.*"
	initialize="this.currentState = 'consoleViewState' "
	>
	
	<!-- states -->		
	<s:states>
		<s:State
			name="configFileViewState" 
			/>
		<s:State
			name="consoleViewState" 
			/>
	</s:states>
	
	
	
	<!-- views -->
	<view:Header
		id="header"
		height="{ Header.NORMAL_HEIGHT }" width="100%"
		/>
	
	<view:ConfigFileView
		id="configFile"
		width="100%" height="100%"
		includeIn="configFileViewState"
		/>
	
	<view:ConsoleView
		id="console"
		width="100%" height="100%"
		includeIn="consoleViewState"
		/>
	
	<view:Footer
		width="100%" height="50"
		/>
	
</s:VGroup>
